<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <description>Subversion configuration manager</description>
    <display-name>Subversive</display-name>

    <servlet>
        <servlet-name>ConfigEditorServlet</servlet-name>
        <servlet-class>nl.rix0r.subversive.server.ConfigEditorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
            <servlet-name>ConfigEditorServlet</servlet-name>
            <url-pattern>/subversive/configeditor/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
