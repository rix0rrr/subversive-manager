<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:s='urn:import:nl.rix0r.subversive.client'>

    <g:HTMLPanel>
        <h2><g:Label ui:field="repoTitle" /></h2>
        <g:Hyperlink targetHistoryToken="">&lt;&lt; Back to repository list</g:Hyperlink>
        <table valign="top">
            <tr>
                <td>
                    Directories
                    <g:DecoratorPanel>
                        <s:DirectoryTree width="200px" height="400px" ui:field="directoryTree" />
                    </g:DecoratorPanel>
                </td>
                <td>
                    <g:Label ui:field="selectedDirectory" />
                    <g:DecoratorPanel>
                        <g:ScrollPanel width="300px" height="400px">
                            <s:PermissionsList ui:field="permissions" width="100%" />
                        </g:ScrollPanel>
                    </g:DecoratorPanel>
                </td>
                <td valign="middle">
                    <g:Button width="100%" ui:field="assignButton">&lt; Assign</g:Button><br />
                    <g:Button width="100%" ui:field="removeButton">Remove &gt;</g:Button>
                </td>
                <td>
                    <g:TabLayoutPanel width="200px" height="400px" barUnit="EM" barHeight="1.5" ui:field="tabpanel">
                        <g:tab>
                            <g:header>Users</g:header>
                            <s:UserList ui:field="users" />
                        </g:tab>
                        <g:tab>
                            <g:header>Groups</g:header>
                            <g:DockLayoutPanel unit="EM">
                                <g:center>
                                    <s:GroupList ui:field="groups" />
                                </g:center>
                                <g:south size="2">
                                    <g:HTMLPanel>
                                        <g:Button>New</g:Button>
                                        <g:Button>Edit</g:Button>
                                        <g:Button>Delete</g:Button>
                                    </g:HTMLPanel>
                                </g:south>
                            </g:DockLayoutPanel>
                        </g:tab>
                    </g:TabLayoutPanel>
                </td>
            </tr>
        </table>
        <g:Button ui:field="saveButton">Save</g:Button>
    </g:HTMLPanel>
</ui:UiBinder>