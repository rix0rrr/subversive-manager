<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>.error { color: red; }</ui:style>

    <g:HTMLPanel>
        <table>
            <tr>
                <td align="right">User name</td>
                <td><g:TextBox ui:field="username" /></td>
            </tr>
            <tr>
                <td align="right">Password</td>
                <td><g:PasswordTextBox ui:field="password" /></td>
            </tr>
            <tr>
                <td></td>
                <td><g:Label ui:field="errorLabel" styleName="{style.error}" /></td>
            </tr>
            <tr>
                <td></td>
                <td><g:Button ui:field="loginButton">Log in</g:Button></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>